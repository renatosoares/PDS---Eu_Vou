<%= form_for(@event) do |f| %>
    
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :titulo, :class => "form-control", :placeholder => "Entre com o tÃ­tulo do evento" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descricao, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :descricao, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :endereco, :class => "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :endereco, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :data, :class => "control-label col-sm-2"%>
    <div class="col-sm-10">
      <%= f.datetime_select :data, :class => "form-control" %>
    </div>
  </div>

<!-- ###################### -->
              <button class="btn btn-primary " type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                  Adicionar mais info
              </button>

